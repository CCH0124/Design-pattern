abstract class Component {
    operation()
    add(Component)
    remove(Component)
    getChild(int)
}

class Leaf {
    operation()
}

class Composite {
    operation()
    add(Component)
    remove(Component)
    getChild(int)
}

class Client {
}

Component <|-- Leaf
Component <|-- Composite

Component <-- Composite
Component <-- Client


@enduml